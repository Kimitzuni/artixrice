#!/bin/bash

CapacityFile="/sys/class/power_supply/BAT0/capacity"
BatteryCapacity="$(cat /sys/class/power_supply/BAT0/capacity)%"
BatteryStatus="$(cat /sys/class/power_supply/BAT0/status)"

[ ! -f "$CapacityFile" ] && BatteryCapacity="Battery Present" && Prefix="No"

case $BatteryStatus in
	"Charging") Prefix="ðŸ”Œ";;
	"Discharging"|"Not Charging"|"Unknown") Prefix="ðŸ”‹";;
esac

echo " $Prefix $BatteryCapacity "
